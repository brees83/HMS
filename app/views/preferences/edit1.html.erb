<%= semantic_form_for @preference do |f| %>
  <%= f.inputs do %>
    <%= f.input :voice %>
    <%= f.input :text %>
    <%= f.input :email %>
  
	<%= f.select :msg_pref, [['Send All Message Types','all'],['Send Just Texts','text'],['Send Just Voice Calls','voice'],['Send Just Emails','email']] %>
	
	  
<%= f.label :timezone %>
	
<%= f.collection_select :timezone, ActiveSupport::TimeZone.us_zones, :name, :to_s %>